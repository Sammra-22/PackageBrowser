<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/path_image"
        android:background="@drawable/icon_package"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:id="@+id/path_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/path_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="10dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/path_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/path_image"
        android:layout_toLeftOf="@id/path_extra"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/path_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/path_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textSize="12dp"
            />

    </LinearLayout>


</RelativeLayout>